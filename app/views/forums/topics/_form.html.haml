= f.text_field :name

.form-group
  %label Status

  .row
    .px-3.py-1= f.check_box :locked, label: 'Locked', label_class: 'pl-1'
    .px-3.py-1= f.check_box :pinned, label: 'Pinned', label_class: 'pl-1'
    .px-3.py-1= f.check_box :hidden, label: 'Hidden', label_class: 'pl-1'

.form-group
  %label Options

  = f.check_box :default_locked, label: 'Default new threads to "Locked"', label_class: 'pl-1'
  = f.check_box :default_hidden, label: 'Default new threads to "Hidden"', label_class: 'pl-1'

= f.markdown_editor :description, rows: 10
