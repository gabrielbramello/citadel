- if user_can_meta?
  = link_to edit_meta_game_path(@game), class: 'btn btn-secondary pull-right', type: 'button' do
    Edit
    = inline_svg_tag 'open_iconic/pencil.svg', class: 'icon ml-1'

%h1= @game.name

.card.mb-3
  .card-header Formats
  - present_collection(@game.formats).each do |format_p|
    = format_p.link class: 'list-group-item'

.card.mb-3
  .card-header Maps
  - present_collection(@game.maps).each do |map_p|
    = map_p.link class: 'list-group-item'
